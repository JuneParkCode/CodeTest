{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ 활성 파일 빌드",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "${file}",	// 디렉토리내 다른 파일도 포함하기 위함. 없으면 헤더 파일이 포함이 안됨
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-std=c++17",
                "&&", // 앞의 명령어가 성공하면
                "${fileDirname}/${fileBasenameNoExtension}" //파일을 실행 , 빌드와 동시에 실행용...
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "컴파일러: /usr/bin/g++"
        }
    ],
    "version": "2.0.0"
}